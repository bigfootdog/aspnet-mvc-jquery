@{
    
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.7.1.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui-1.8.20.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var searchKeyword = "@Request.QueryString["searchKeyword"]";
            var searchOption = "@Request.QueryString["searchOption"]";

            $("#searchKeyword").val(searchKeyword);
            $("#searchOption").val(searchOption);

        });

    </script>
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("your logo", "Index", "Home")</p>
            </div>

            <div class="float-left">
                <form action="@Url.Content("~/Search/Index")" method="get">

                    <input type="text" id="searchKeyword" name="searchKeyword" placeholder="Search Movies or Tv Series..." />
                    <input type="submit" id="btnGo" value="Go" />
                    <br />
                    <input type="radio" name="searchOption" value="multi" title="All" checked />All
                    <input type="radio" name="searchOption" value="movie" title="Movie" />Movie 
                    <input type="radio" name="searchOption" value="tv" title="Tv series" />Tv Series
                    <input type="radio" name="searchOption" value="person" title="Actor/Actress" />Actor/Actress
            
           
           
            
                </form>
            </div>
            <div class="float-right">
                @*<section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>*@
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>                        
                        <li>@Html.ActionLink("Now Playing", "Now_Playing", "Movie")</li>
                        <li>@Html.ActionLink("Upcoming Movies", "Up_Coming", "Movie")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </nav>
            </div>
        </div>

    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
